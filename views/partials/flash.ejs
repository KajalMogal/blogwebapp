    <% if (success && success.length) { %>
        <div id="flash-alert" class="alert alert-primary alert-dismissible fade show" role="alert">
            <% if (success.includes('Created a new blog post')) { %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                    <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05"/>
                </svg>
                <%= success %>
            <% } else if (success.includes('Successfully updated a blog')) { %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check2-circle" viewBox="0 0 16 16">
                    <path d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0"/>
                    <path d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z"/>
                </svg>
                <%= success %>
            <% } else if (success.includes('Deleted')) { %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"/>
                </svg>
                <%= success %>
            <% }  else if (success.includes('Welcome Back !')) { %>
                <%= success %>
                <% } else if (success.includes('Welcome!')) { %>
                    <%= success %>
            <% } else if (success.includes('You have successfully logged out.')) { %>  
                <%= success %>
            <% } else if (success.includes('New comment added!')) { %>
                <%= success %>
            <% }  else if (success.includes('Deleted comment!')) { %>
                <%= success %>
             <%  }  %>      
        </div>
    <% } %>

    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const alert = document.getElementById('flash-alert');
            if (alert) {
                //A timer to fade out the alert after seconds
                setTimeout(() => {
                    alert.classList.remove('show');
                    alert.classList.add('fade');
                    
                    // Wait for the fade-out transition to finish, then remove the alert
                    setTimeout(() => {
                        alert.remove(); 
                    }, 150); 
                }, 3000); //  seconds
            }
        });
    </script>
    

    


    


    
    
   
    